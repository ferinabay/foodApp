<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAwalActivity">

    <ImageView
        android:id="@+id/logoMenu"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/coffee_shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_list"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btn_gradient_style2"
        android:text="PEMBELI"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/logoMenu"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="launchPembeli"/>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn_gradient_style2"
        android:text="PELAYAN"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/btn_list"
        app:layout_constraintTop_toBottomOf="@+id/logoMenu"
        android:onClick="launchPelayan"/>

    <TextView
        android:id="@+id/tv_contactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:layout_marginTop="120dp"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/logoMenu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="launchContactUs"/>


</androidx.constraintlayout.widget.ConstraintLayout>